@import "../../common/stylus/mixin"
.rating-wrapper
  padding 0 18px;
  .ratings-item
    position relative
    padding: 16px 0;
    border-1px(rgba(7, 17, 27, 0.1))
    .user
      color orangered;
      position: absolute
      right: 0;
      top: 16px;
      .username
        display: inline-block;
        vertical-align: top;
        color: rgb(17, 153, 159)
        .avatar
          border-radius: 50%
    .time
      margin-bottom 6px;
      color blue;
      font-size 20px;
      line-height 24px;
      color: rgb(17, 153, 159)
    .text
      font-size 12px;
      color: rgb(7, 17, 27)
      line-height 16px;
      .icon-thumb_up,.icon-thumb_down
        margin-right 4px;
        line-height :16px;
        font-size:12px;
      .icon-thumb_up
        color: rgb(7, 17, 27)
      .icon-thumb_down
        color: rgb(17, 153, 159)
  .no-rating
    padding:16px 0;
    font-size 12px;
    color:rgb(17, 153, 159)
