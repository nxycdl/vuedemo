@import "../../common/stylus/mixin"
.goods
  display: flex;
  position: absolute;
  top: 188px;
  bottom: 46px;
  width: 100%;
  overflow: hidden;
  .menu-wrapper
    flex: 0 0 80px;
    width: 80px;
    background: #f3f5f7;
    .menu-item
      display: table;
      height: 54px;
      width: 56px;
      line-height: 14px;
      padding: 0 12px
      .icon
        display: inline-block
        width: 12px
        height: 12px
        margin-right: 2px
        background-size: 12px 12px
        background-repeat: no-repeat
        &.decrease
          bg-image('decrease_3')
        &.discount
          bg-image('discount_3')
        &.invoice
          bg-image('invoice_3')
        &.special
          bg-image('special_3')
        &.guarantee
          bg-image('guarantee_3')

      .text
        display: table-cell;
        vertical-align: middle;
        line-height: 12px
        border-1px(rgba(7, 17, 27, 0.1))
        font-size: 10px
  .foods-warpper
    flex: 1
