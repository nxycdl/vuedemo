.cartcontrol
  font-size: 0;
  .cart-decrease
    display: inline-block;
    padding: 6px;
    transition: all 0.4s linear
    &.move-transition
      opactiy: 1
      transform: translate3D(0, 0, 0)
    .inner
      display: inline-block;
      line-height: 24px;
      font-size: 24px;
      color: rgb(0, 160, 220)
      transition: all 0.4s linear
      transform: rotate(0)
    &.move-enter, &.move-leave
      opactioy: 0
      transform: translate3D(24px, 0, 0)
      .inner
        transform: rotate(90deg);
  .cart-count
    display: inline-block;
    vertical-align: top;
    width: 12px;
    padding-top: 6px;
    line-height: 24px;
    text-align: center;
    font-size: 10px;
    color: rgb(147, 156, 159);
  .cart-add
    display: inline-block;
    padding: 6px;
    line-height: 24px;
    font-size: 24px;
    color: rgb(0, 160, 220);

